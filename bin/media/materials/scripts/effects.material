material VirtualUnit
 {
	receive_shadows off
	transparency_casts_shadows off
   technique
   {
     pass
     {
       lighting off
       scene_blend alpha_blend
       depth_write off
 
       texture_unit
       {
         colour_op_ex source1 src_manual src_current .85 .85 .85
         alpha_op_ex source1 src_manual src_current 0.5  
       }
     }
   }
 }

