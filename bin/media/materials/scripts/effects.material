material Particle
{
	technique
	{
		pass
		{
			lighting off
			scene_blend alpha_blend
			diffuse vertexcolour

			point_sprites on
			point_size 1.0f
			point_size_attenuation on
		}
	}
}

material PositiveBeam
 {
	receive_shadows off
	transparency_casts_shadows off
   technique
   {
     pass
     {
       lighting off
		diffuse vertexcolour
       scene_blend src_alpha one 
	   scene_blend_op add
       depth_write off
	   cull_hardware none

       texture_unit 
       {
		 texture EnergyBeam.png
		 scroll_anim 1.0f 0.0f
         colour_op_ex source1 src_diffuse src_texture
         alpha_op_ex modulate src_diffuse src_texture
       }
     }
   }
 }
 
